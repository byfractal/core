{
  "name": "hcentric-figma-plugin",
  "version": "1.0.0",
  "description": "HCentric Figma plugin for UI/UX optimization",
  "main": "dist/code.js",
  "scripts": {
    "dev": "npm run sync && webpack --mode=development --watch",
    "build": "webpack --mode=production",
    "postbuild": "mkdir -p dist/ui && cp src/ui/ProjectsPage.html dist/ui/ && cp src/ui/ImportPage.html dist/ui/ && cp dist/manifest.json manifest.json",
    "sync": "./sync-manifest.sh",
    "lint": "eslint --ext .ts,.tsx src/",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "author": "HCentric",
  "license": "Proprietary",
  "private": true,
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.0.5",
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.279.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.71.0",
    "@types/node": "^20.8.4",
    "@types/react": "^18.2.28",
    "@types/react-dom": "^18.2.13",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "autoprefixer": "^10.4.16",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.51.0",
    "eslint-plugin-react": "^7.33.2",
    "html-webpack-plugin": "^5.5.3",
    "postcss": "^8.4.31",
    "postcss-loader": "^7.3.3",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "ts-loader": "^9.5.0",
    "typescript": "^5.2.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4"
  }
}
