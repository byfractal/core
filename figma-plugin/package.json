{
  "name": "figma-plugin-clerk-oauth",
  "version": "1.0.0",
  "description": "Figma plugin avec authentification OAuth via Clerk",
  "main": "dist/code.js",
  "scripts": {
    "build": "webpack --mode=production",
    "postbuild": "npm run create-ui-dir && npm run copy-html-files && npm run copy-manifest",
    "create-ui-dir": "if not exist dist\\ui mkdir dist\\ui",
    "copy-html-files": "copy src\\ui\\ProjectsPage.html dist\\ui\\ && copy src\\ui\\ImportPage.html dist\\ui\\",
    "copy-manifest": "copy dist\\manifest.json manifest.json",
    "dev": "webpack --mode=development --watch",
    "sync": "./sync-manifest.sh",
    "lint": "eslint --ext .ts,.tsx src/",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "test": "jest",
    "test:clerk": "echo \"Testing Clerk Connection\" && webpack --mode=development && echo \"Test build completed. Please run the plugin in Figma to see test results.\""
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.488.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.2.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.68.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.5",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.14",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^6.8.1",
    "dotenv": "^16.5.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.6.2",
    "postcss": "^8.4.27",
    "postcss-loader": "^7.3.3",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "url-loader": "^4.1.1",
    "webpack": "^5.99.5",
    "webpack-cli": "^5.1.4"
  }
}
